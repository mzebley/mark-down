{
  "name": "mark-down-monorepo",
  "private": true,
  "version": "1.2.2",
  "description": "markâ†“ monorepo containing core, CLI, Angular, and React adapters",
  "scripts": {
    "build": "npm run build -w @mzebley/mark-down && npm run build -w @mzebley/mark-down-cli && npm run build -w @mzebley/mark-down-angular && npm run build -w @mzebley/mark-down-react",
    "test": "vitest run --exclude tests/cli.e2e.spec.ts",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:e2e": "vitest run tests/cli.e2e.spec.ts",
    "release": "npm run test && npm run build && npm run test:e2e && npm publish --workspaces"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/dompurify": "^3.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.27",
