    "@types/react-dom": "^18.2.23",
    "@vitest/coverage-v8": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "execa": "^8.0.1",
    "marked": "^11.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
